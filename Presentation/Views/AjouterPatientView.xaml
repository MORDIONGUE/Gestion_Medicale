<Window x:Class="A_C.Presentation.Views.AjouterPatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un patient" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les labels -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,10,0,0"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Style pour les boutons -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style spécifique pour le bouton Enregistrer -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style spécifique pour le bouton Annuler -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#da190b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Text="Ajouter un nouveau patient" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   HorizontalAlignment="Center"/>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <Label Content="Nom :"/>
            <TextBox x:Name="NomTextBox" 
                     Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Date de naissance :"/>
            <DatePicker x:Name="DateNaissancePicker" 
                       SelectedDate="{Binding DateNaissance}"
                       Height="30" 
                       Margin="5"/>

            <Label Content="Adresse :"/>
            <TextBox x:Name="AdresseTextBox" 
                     Text="{Binding Adresse, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Téléphone :"/>
            <TextBox x:Name="TelephoneTextBox" 
                     Text="{Binding Telephone, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Courriel :"/>
            <TextBox x:Name="CourrielTextBox" 
                     Text="{Binding Courriel, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click" 
                    Style="{StaticResource SaveButtonStyle}"/>
            <Button Content="Annuler" 
                    Click="Annuler_Click" 
                    Style="{StaticResource CancelButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window> 