<Window x:Class="A_C.Presentation.Views.GestionPrescriptionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Prescriptions" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les TextBlock labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style pour le bouton Ajouter -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="💊" 
                                         FontSize="16" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                         Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulaire d'ajout -->
        <GroupBox Header="Nouvelle Prescription" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Médicament -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                             Text="💊 Médicament :" 
                             Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                            x:Name="MedicamentTextBox"
                            Style="{StaticResource InputStyle}"
                            Margin="0,5"/>

                    <!-- Dosage -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                             Text="⚖️ Dosage :" 
                             Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                            x:Name="DosageTextBox"
                            Style="{StaticResource InputStyle}"
                            Margin="0,5"/>

                    <!-- Instructions -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                             Text="📝 Instructions :" 
                             Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                            x:Name="InstructionsTextBox"
                            Style="{StaticResource InputStyle}"
                            Height="60"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalContentAlignment="Top"
                            Margin="0,5"/>

                    <!-- Durée -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                             Text="⏱️ Durée :" 
                             Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                            x:Name="DureeTextBox"
                            Style="{StaticResource InputStyle}"
                            Margin="0,5"/>

                    <!-- Bouton Ajouter -->
                    <Button Grid.Row="4" Grid.Column="1"
                            Content="Ajouter Prescription"
                            Click="AjouterPrescription_Click"
                            Style="{StaticResource AddButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="0,15,0,0"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Liste des prescriptions -->
        <GroupBox Grid.Row="1" Header="Liste des Prescriptions" Padding="15">
            <ListView ItemsSource="{Binding Prescriptions}"
                      BorderThickness="1"
                      BorderBrush="LightGray">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" 
                                      DisplayMemberBinding="{Binding Id}" 
                                      Width="60"/>
                        <GridViewColumn Header="Médicament" 
                                      DisplayMemberBinding="{Binding Medicament}" 
                                      Width="150"/>
                        <GridViewColumn Header="Dosage" 
                                      DisplayMemberBinding="{Binding Dosage}" 
                                      Width="100"/>
                        <GridViewColumn Header="Instructions" 
                                      DisplayMemberBinding="{Binding Instructions}" 
                                      Width="200"/>
                        <GridViewColumn Header="Durée" 
                                      DisplayMemberBinding="{Binding Duree}" 
                                      Width="100"/>
                        <GridViewColumn Header="État" 
                                      DisplayMemberBinding="{Binding Etat}" 
                                      Width="100"/>
                        <GridViewColumn Header="Date" 
                                      DisplayMemberBinding="{Binding Date, StringFormat=dd/MM/yyyy}" 
                                      Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window> 