<Window x:Class="A_C.Presentation.Views.AccueilView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accueil - Gestion Médicale" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" FontSize="16" Foreground="{TemplateBinding Foreground}" Margin="0,0,10,0"/>
                                <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveNavButtonStyle" BasedOn="{StaticResource NavButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="AccueilMenuColumn" Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu de navigation -->
        <StackPanel Grid.Column="0" Background="#333">
            <!-- Bouton Toggle Menu -->
            <Button Content="☰" 
                    Click="ToggleMenu_Click"
                    Style="{StaticResource NavButtonStyle}"/>

            <!-- Boutons de navigation -->
            <Button Content="Accueil" 
                    Tag="🏠"
                    Click="GoHome_Click"
                    Style="{StaticResource ActiveNavButtonStyle}"/>
            
            <Button Content="Patients" 
                    Tag="👥"
                    Click="PatientMenuItem_Click"
                    Style="{StaticResource NavButtonStyle}"/>
            
            <Button Content="Dossiers Médicaux" 
                    Tag="📁"
                    Click="DossierMedicalMenuItem_Click"
                    Style="{StaticResource NavButtonStyle}"/>
            
            <Button Content="Consultations" 
                    Tag="🩺"
                    Click="ConsultationMenuItem_Click"
                    Style="{StaticResource NavButtonStyle}"/>
            
            <Button Content="Prescriptions" 
                    Tag="💊"
                    Click="PrescriptionMenuItem_Click"
                    Style="{StaticResource NavButtonStyle}"/>

            <!-- Boutons du bas -->
            <StackPanel VerticalAlignment="Bottom">
                <Button Content="Aide" 
                        Tag="❓"
                        Click="Help_Click"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <Button Content="Paramètres" 
                        Tag="⚙️"
                        Click="SettingsMenuItem_Click"
                        Style="{StaticResource NavButtonStyle}"/>
                
                <Button Content="Déconnexion" 
                        Tag="🚪"
                        Click="DeconnexionMenuItem_Click"
                        Style="{StaticResource NavButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Contenu principal -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Message de bienvenue -->
            <TextBlock x:Name="WelcomeText" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- Statistiques -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Statistiques Patients -->
                <Border Grid.Column="0" 
                        Background="#E3F2FD" 
                        Margin="5" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Patients" 
                                 FontWeight="Bold" 
                                 FontSize="18"/>
                        <TextBlock x:Name="PatientsCount" 
                                 Text="0" 
                                 FontSize="36" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Statistiques Consultations -->
                <Border Grid.Column="1" 
                        Background="#E8F5E9" 
                        Margin="5" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Consultations" 
                                 FontWeight="Bold" 
                                 FontSize="18"/>
                        <TextBlock x:Name="ConsultationsCount" 
                                 Text="0" 
                                 FontSize="36" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Statistiques Prescriptions -->
                <Border Grid.Column="2" 
                        Background="#FFF3E0" 
                        Margin="5" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Prescriptions" 
                                 FontWeight="Bold" 
                                 FontSize="18"/>
                        <TextBlock x:Name="PrescriptionsCount" 
                                 Text="0" 
                                 FontSize="36" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Statistiques Dossiers -->
                <Border Grid.Column="3" 
                        Background="#F3E5F5" 
                        Margin="5" 
                        Padding="20" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Dossiers" 
                                 FontWeight="Bold" 
                                 FontSize="18"/>
                        <TextBlock x:Name="DossiersCount" 
                                 Text="0" 
                                 FontSize="36" 
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window> 