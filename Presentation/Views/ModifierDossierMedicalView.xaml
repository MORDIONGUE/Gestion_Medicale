<Window x:Class="A_C.Presentation.Views.ModifierDossierMedicalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un Dossier Médical" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style de base pour les boutons -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                         FontSize="16" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{TemplateBinding Content}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton Modifier -->
        <Style x:Key="ModifyButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Ajouter -->
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Supprimer -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d32f2f"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Enregistrer -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="Black"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFA000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Modifier le Dossier Médical" 
                     FontSize="24" 
                     FontWeight="Bold"/>
            <TextBlock Text="{Binding PatientInfo}" 
                     FontSize="16" 
                     Margin="0,10,0,0"
                     Foreground="#666"/>
        </StackPanel>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Informations du dossier -->
            <GroupBox Header="Informations générales" Padding="10" Grid.Row="0">
                <StackPanel>
                    <TextBlock Text="Antécédents médicaux :" 
                             Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding DossierMedical.Antecedents, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource InputStyle}"
                            Height="60"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"/>
                </StackPanel>
            </GroupBox>

            <!-- Liste des traitements -->
            <GroupBox Header="Traitements" Padding="10" Grid.Row="1" Margin="0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox ItemsSource="{Binding DossierMedical.Traitements}"
                            SelectedItem="{Binding TraitementSelectionne}"
                            Margin="0,0,0,10"/>

                    <StackPanel Grid.Row="1" 
                              Orientation="Horizontal" 
                              HorizontalAlignment="Left">
                        <Button Content="Modifier" 
                                Tag="✏️" 
                                Style="{StaticResource ModifyButtonStyle}"
                                Click="ModifierTraitement_Click"/>
                        <Button Content="Ajouter" 
                                Tag="➕" 
                                Style="{StaticResource AddButtonStyle}"
                                Click="AjouterTraitement_Click"/>
                        <Button Content="Supprimer" 
                                Tag="🗑️" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="SupprimerTraitement_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Enregistrer" 
                    Tag="💾" 
                    Width="150"
                    Style="{StaticResource SaveButtonStyle}"
                    Click="Enregistrer_Click"/>
        </StackPanel>
    </Grid>
</Window> 