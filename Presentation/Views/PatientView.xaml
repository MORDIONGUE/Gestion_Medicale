<Window x:Class="A_C.Presentation.Views.PatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Patients" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style pour les boutons -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <!-- Styles existants... -->
        </Style>

        <!-- Style pour le bouton actif -->
        <Style x:Key="ActiveNavButtonStyle" BasedOn="{StaticResource NavButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec bouton Ajouter -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,20">
            <Button Content="Ajouter Patient" 
                    Click="AjouterPatient_Click"
                    Style="{StaticResource AddButtonStyle}"/>
        </StackPanel>

        <!-- Liste des patients -->
        <ListView x:Name="PatientListView" 
                  Grid.Row="1" 
                  ItemsSource="{Binding Patients}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" 
                                  DisplayMemberBinding="{Binding Id}" 
                                  Width="50"/>
                    <GridViewColumn Header="Nom" 
                                  DisplayMemberBinding="{Binding Nom}" 
                                  Width="150"/>
                    <GridViewColumn Header="Date de Naissance" 
                                  DisplayMemberBinding="{Binding DateNaissance}" 
                                  Width="120"/>
                    <GridViewColumn Header="Téléphone" 
                                  DisplayMemberBinding="{Binding Telephone}" 
                                  Width="120"/>
                    <GridViewColumn Header="Email" 
                                  DisplayMemberBinding="{Binding Courriel}" 
                                  Width="200"/>
                    <!-- Colonne pour le menu contextuel -->
                    <GridViewColumn x:Name="PatientMenuColumn" 
                                  Header="Actions" 
                                  Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Modifier" 
                                            Click="ModifierPatient_Click" 
                                            Style="{StaticResource EditButtonStyle}"
                                            Margin="0,0,5,0"/>
                                    <Button Content="Supprimer" 
                                            Click="SupprimerPatient_Click"
                                            Style="{StaticResource DeleteButtonStyle}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window> 