<Window x:Class="A_C.Presentation.Views.HistoriqueConsultationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historique des Consultations" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les en-têtes de colonnes -->
        <Style x:Key="HeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style pour les éléments de la liste -->
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f7ff"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#e3f2fd"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Historique des Consultations" 
                      FontSize="24" 
                      FontWeight="Bold"/>
            <TextBlock Text="{Binding PatientInfo}" 
                      FontSize="16" 
                      Margin="0,10,0,0"
                      Foreground="#666"/>
        </StackPanel>

        <!-- Liste des consultations -->
        <ListView Grid.Row="1" 
                  ItemsSource="{Binding Consultations}"
                  BorderThickness="1"
                  BorderBrush="#ddd">
            <ListView.View>
                <GridView>
                    <!-- Date -->
                    <GridViewColumn Header="📅 Date" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Motif -->
                    <GridViewColumn Header="📝 Motif" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Motif}"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Observation -->
                    <GridViewColumn Header="🔍 Observation" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Observation}"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Diagnostic -->
                    <GridViewColumn Header="💊 Diagnostic" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Diagnostic}"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Médecin -->
                    <GridViewColumn Header="👨‍⚕️ Médecin" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Medecin.Nom}"
                                         VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window> 