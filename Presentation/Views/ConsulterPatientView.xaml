<Window x:Class="A_C.Presentation.Views.ConsulterPatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulter Patient" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour les valeurs -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Style pour le bouton Fermer -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="❌" 
                                         FontSize="16" 
                                         Margin="0,0,8,0" 
                                         Foreground="White"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                         Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Text="Détails du Patient" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 Margin="0,0,0,20"/>

        <!-- Informations du patient -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ID -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                         Text="🆔 Identifiant :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                         Text="{Binding Patient.Id}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>

                <!-- Nom -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                         Text="👤 Nom :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                         Text="{Binding Patient.Nom}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>

                <!-- Date de naissance -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                         Text="📅 Date de naissance :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="2" Grid.Column="1" 
                         Text="{Binding Patient.DateNaissance}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>

                <!-- Adresse -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                         Text="🏠 Adresse :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="3" Grid.Column="1" 
                         Text="{Binding Patient.Adresse}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>

                <!-- Téléphone -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                         Text="📞 Téléphone :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="4" Grid.Column="1" 
                         Text="{Binding Patient.Telephone}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>

                <!-- Courriel -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                         Text="📧 Courriel :" 
                         Style="{StaticResource LabelStyle}"
                         Margin="0,0,0,10"/>
                <TextBlock Grid.Row="5" Grid.Column="1" 
                         Text="{Binding Patient.Courriel}" 
                         Style="{StaticResource ValueStyle}"
                         Margin="0,0,0,10"/>
            </Grid>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Fermer" 
                    Width="120" 
                    Click="Fermer_Click" 
                    Style="{StaticResource CloseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window> 