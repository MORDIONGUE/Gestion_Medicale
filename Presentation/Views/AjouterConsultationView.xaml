<Window x:Class="A_C.Presentation.Views.AjouterConsultationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle Consultation" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Date de consultation"/>
            <DatePicker x:Name="ConsultationDatePicker" 
                       SelectedDate="{Binding Date}"
                       Margin="0,0,0,10"/>

            <Label Content="Motif"/>
            <TextBox x:Name="MotifTextBox" 
                    Text="{Binding Motif}"
                    Margin="0,0,0,10"/>

            <Label Content="Observations"/>
            <TextBox x:Name="ObservationTextBox" 
                    Text="{Binding Observation}"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    Height="100"
                    Margin="0,0,0,10"/>

            <Label Content="Diagnostic"/>
            <TextBox x:Name="DiagnosticTextBox" 
                    Text="{Binding Diagnostic}"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    Height="100"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Annuler" 
                    Click="Annuler_Click"
                    Width="80"
                    Margin="0,0,10,0"/>
            <Button Content="Enregistrer" 
                    Click="Enregistrer_Click"
                    Width="80"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 