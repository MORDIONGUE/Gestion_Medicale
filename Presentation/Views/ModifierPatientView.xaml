<Window x:Class="A_C.Presentation.Views.ModifierPatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Patient" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Style pour les labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="150"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style pour le DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Style de base pour les boutons -->
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                         FontSize="16" 
                                         Margin="0,0,8,0"/>
                                <TextBlock Text="{TemplateBinding Content}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton Enregistrer -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour le bouton Annuler -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d32f2f"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <TextBlock Text="Modifier les informations du patient" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <!-- Nom -->
            <DockPanel Margin="0,0,0,15">
                <TextBlock Text="👤 Nom :" 
                         Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Patient.Nom, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InputStyle}"/>
            </DockPanel>

            <!-- Date de naissance -->
            <DockPanel Margin="0,0,0,15">
                <TextBlock Text="📅 Date de naissance :" 
                         Style="{StaticResource LabelStyle}"/>
                <DatePicker SelectedDate="{Binding DateNaissance}"
                          Style="{StaticResource DatePickerStyle}"/>
            </DockPanel>

            <!-- Adresse -->
            <DockPanel Margin="0,0,0,15">
                <TextBlock Text="🏠 Adresse :" 
                         Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Patient.Adresse, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InputStyle}"/>
            </DockPanel>

            <!-- Téléphone -->
            <DockPanel Margin="0,0,0,15">
                <TextBlock Text="📞 Téléphone :" 
                         Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Patient.Telephone, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InputStyle}"/>
            </DockPanel>

            <!-- Courriel -->
            <DockPanel Margin="0,0,0,15">
                <TextBlock Text="📧 Courriel :" 
                         Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Patient.Courriel, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InputStyle}"/>
            </DockPanel>
        </StackPanel>

        <!-- Boutons d'action -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Enregistrer" 
                    Tag="💾" 
                    Width="150"
                    Style="{StaticResource SaveButtonStyle}"
                    Click="Enregistrer_Click"/>
            <Button Content="Annuler" 
                    Tag="❌" 
                    Width="150"
                    Style="{StaticResource CancelButtonStyle}"
                    Click="Annuler_Click"/>
        </StackPanel>
    </Grid>
</Window>