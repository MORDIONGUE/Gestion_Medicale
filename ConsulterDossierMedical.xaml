<Window x:Class="gestionMedicale.ConsulterDossierMedical"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulter Dossier Médical" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Détails du Dossier Médical" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Identifiant :" FontWeight="Bold"/>
            <TextBlock x:Name="IdTextBlock" FontSize="16" Margin="0,5,0,10" Foreground="Blue"/>

            <TextBlock Text="Nom du patient :" FontWeight="Bold"/>
            <TextBlock x:Name="NomTextBlock" FontSize="16" Margin="0,5,0,10"/>

            <TextBlock Text="Traitements passés :" FontWeight="Bold"/>
            <ListBox x:Name="TraitementsListBox" Margin="0,5,0,20" Height="100"/>

            <Button Content="Fermer" Padding="10" Width="150" HorizontalAlignment="Right" Click="Fermer_Click"/>
        </StackPanel>
    </Grid>
</Window>
